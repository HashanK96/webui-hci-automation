<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="HCIPagesTest">
    <test name="HCIPages.HCI_PagesTests">
        <classes>
            <class name="web.test.HCITests.HCIPages.HCI_NavigationBarTests"/>

            <class name="web.test.HCITests.HCIPages.HCI_HomePageTests">
                <methods>
                    <include name="verifyHomePageFontSizes"></include>
                    <include name="verifyHomePagePlayVideo"></include>
                    <include name="verifyRedirectHyperthermiaSubNav"></include>
                </methods>
            </class>
            <class name="web.test.HCITests.HCIPages.HCI_HyperthermiaPageTest">
                <methods>
                    <include name="verifyHyperthermiaPageFontSizes"></include>
                    <include name="verifyRedirectDiagnosisEarlyTreatmentSubNav"></include>
                </methods>

            </class>
            <class name="web.test.HCITests.HCIPages.HCI_DiagnosisEarlyTreatmentPageTests">
                <methods>
                    <include name="verifyDiagnosisEarlyTreatmentPageFontSizes"></include>
                    <include name="verifyRedirectHyperthermiaChemotherapySubNav"></include>
                </methods>
            </class>

            <class name="web.test.HCITests.HCIPages.HCI_HyperthermiaChemotherapyPageTests">
                <methods>
                    <include name="verifyHyperthermiaChemotherapyPageFontSizes"></include>
                    <include name="verifyRedirectHyperthermiaRadiationTherapySubNav"></include>
                </methods>
            </class>
            <class name="web.test.HCITests.HCIPages.HCI_HyperthermiaRadiationTherapyPageTests">
                <methods>
                    <include name="verifyHyperthermiaRadiationTherapyPageFontSizes"></include>
                    <include name="verifyRedirectCancersWeTreatBreastSubNav"></include>
                </methods>
            </class>

            <class name="web.test.HCITests.HCIPages.HCI_WhatToExpectPageTests">
                <methods>
                    <include name="verifyWhatToExpectPageFontSizes"></include>
                    <include name="verifyWhatToExpectPlayVideo"></include>
                    <include name="verifyRedirectPlanYourVisitSubNav"></include>
                </methods>
            </class>

            <class name="web.test.HCITests.HCIPages.HCI_ContactUsPageTests"/>
        </classes>
    </test>
</suite>
